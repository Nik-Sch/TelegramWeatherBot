{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "scripthost"
    ],
    "types": [],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "build"
  ]
}
